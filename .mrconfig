[DEFAULT]
lib = 
	 hostname="$(hostname)"
	 whoami="$(whoami)"
	 on() {
	   for host in $@; do
	    if [ "${host%@*}" != "${host#*@}" ]; then
				if [ "$whoami" != "${host%@*}" ]; then
					continue
				fi
				host="${host#*@}"
			fi
			if [ "$hostname" = "$host" ]; then
				return 0
			fi
		done
		return 1
	}
	 off() {
	   ! on $@
	 }
git_tracked = git ls-files
vcsh_tracked = vcsh list-tracked $@
git_gc = git gc "$@"
jobs = 5

[$HOME/etc/vcsh/repo.d/gui.git]
checkout = vcsh clone git@github.com:samis/dotfiles-gui.git gui
skip = off mute-ai hyun-ae

[$HOME/etc/vcsh/repo.d/shell.git]
checkout = vcsh clone git@github.com:samis/dotfiles-shell.git shell

[.babushka/deps]
checkout = git clone 'git@github.com:samis/babushka-deps.git' 'deps'

[.gnupg]
checkout = git clone 'git@git.cube.9net:samis/dotfiles_gnupg.git' '.gnupg'
skip = off mute-ai hyun-ae
fixups = chmod ~/.gnupg 700 && chmod 600 ~/.gnupg/*

[.weechat]
checkout = git clone 'git@github.com:samis/dotfiles-weechat.git' '.weechat'
skip = off mute-ai hyun-ae

[.ssh]
checkout = git clone 'http://git.cube.9net:3000/samis/dotfiles_ssh.git/' '.ssh'
skip = off mute-ai hyun-ae
fixups = chmod 600 ~/.ssh/id_rsa

[.emacs.d]
checkout = git clone 'git@github.com:samis/dotfiles-emacs.git' '.emacs.d'

[etc/awesome]
checkout = git clone 'git@github.com:samis/dotfiles-awesome.git' 'awesome'
skip = off mute-ai hyun-ae

[/home/samis]
checkout = git clone 'git@github.com:samis/dotfiles-home.git' 'samis'
post_checkout = mv samis .
